{
  "name": "dzslides",
  "fullName": "DZ Slides",
  "description": "Edit your slides directly in the Factory using simple HTML markup.",
  "version": "0.0.1",
  "keywords": [
    "presentation",
    "tool",
    "slides"
  ],
  "joshfire": {
    "mustache":true,
    "devices": [
      {
        "devices": "desktop",
        "startfile": "index.html"
      }
    ],
    "options": {
      "schema": {
        "slideshtml": {
          "type": "string",
          "title":"Slides HTML"
        }
      },
      "form": [
        {
          "key": "slideshtml",
          "type": "textarea"
        }
      ],
      "value": {
        "slideshtml":"<section>\r\n<!-- This is the first slide -->\r\n<h1>My Presentation</h1>\r\n<footer>by John Doe</footer>\r\n</section>"
      } 
    }
  }
}
